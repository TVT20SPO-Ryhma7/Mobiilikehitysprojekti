                    android:gravity="center"
                    android:text="@string/trivia_name"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
